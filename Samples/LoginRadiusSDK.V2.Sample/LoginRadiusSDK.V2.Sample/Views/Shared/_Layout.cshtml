@using LoginRadiusSDK.V2
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LoginRadius | Customer Registration ASP.Net Demo</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="https://auth.lrcontent.com/v2/LoginRadiusV2.js"></script>
    
    <script>
        var loginRadiusConfig = {};
        loginRadiusConfig.appName = "@LoginRadiusSdkGlobalConfig.AppName";
        loginRadiusConfig.apiKey = "@LoginRadiusSdkGlobalConfig.ApiKey";
        loginRadiusConfig.sott = "@ViewBag.Sott";
    </script>
    <link rel="stylesheet" type="text/css" href="~/content/css/lr-raas.css"/>
    <link rel="stylesheet" type="text/css" href="~/content/css/style.css"/>
    <link rel="stylesheet" type="text/css" href="~/content/css/customize.css"/>
    <link rel="stylesheet" type="text/css" href="~/content/css/custom-social.css"/>
    <link rel="stylesheet" type="text/css" href="~/content/css/social-icons.css"/>
    <script src="~/Scripts/userregistration.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/lr-theme-full.js"></script>

    <!-- Production -->
    <script type="text/html" id="loginradiuscustom_tmpl">
        <span class="lr-provider-label lr-sl-shaded-brick-button lr-flat-<#=Name.toLowerCase()#>"
              onclick="return LRObject.util.openWindow('<#= Endpoint #>');"
              title="Sign up with <#= Name #>" alt="Sign in with <#=Name#>">
            <span class="lr-sl-icon lr-sl-icon-<#=Name.toLowerCase()#>"></span>
            Sign up with <#=Name#>
        </span>
    </script>
    <script type="text/html" id="loginradiuscustom_tmpl_IOS">
        <span class="lr-provider-label lr-sl-shaded-brick-button lr-flat-<#=Name.toLowerCase()#>"
              onclick="return LRObject.util.openWindow('<#= Endpoint #>');"
              title="Sign up with <#= Name #> IOS" alt="Sign in with <#=Name#> IOS">
            <span class="lr-sl-icon lr-sl-icon-<#=Name.toLowerCase()#>"></span>
            Sign up with <#=Name#> IOS
        </span>
    </script>
</head>
<body>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <div class="overlay" id="fade" style="display: none;">
                <div class="circle">
                    <div id="imganimation">
                        <img src="//cdn.loginradius.com/demo/common/loading_spinner.gif" alt="LoginRadius Processing"
                             style="margin-top: -66px;margin-left: -73px;width: 338px;height: 338px;">
                    </div>
                </div>
            </div>
            <div class="clear"></div>
            <div class="copy-right">
                <p>Customer Registration Demo by <a href="https://www.LoginRadius.com/" target="_blank">LoginRadius</a></p>
            </div>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
